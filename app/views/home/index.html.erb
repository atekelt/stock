<div class="row">
    <div class="col-lg-3 col-6">
    <!-- small box -->
    <div class="small-box bg-info">
        <div class="inner">
        <h3><%= @stock_items %></h3>

        <p>Stock Items</p>
        </div>
        <div class="icon">
        <i class="fas fa-boxes"></i>
        </div>
        <a href="/stock_items" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
    <!-- small box -->
    <div class="small-box bg-success">
        <div class="inner">
        <h3><%= @stock_ins %></h3>

        <p>Stock In</p>
        </div>
        <div class="icon">
        <i class="fas fa-inbox"></i>
        </div>
        <a href="/stock_ins" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
    <!-- small box -->
    <div class="small-box bg-warning">
        <div class="inner">
        <h3><%= @stock_outs %></h3>

        <p>Stock Out</p>
        </div>
        <div class="icon">
        <i class="fas fa-box"></i>
        </div>
        <a href="/stock_outs" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
    <!-- small box -->
    <div class="small-box bg-danger">
        <div class="inner">
        <h3><%= @companies %></h3>

        <p>Companies</p>
        </div>
        <div class="icon">
        <i class="fas fa-building"></i>
        </div>
        <a href="/companies" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
    </div>
    <!-- ./col -->
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Recently Added Stock items</h3>
    <div class="card-tools">
      <%= link_to "All Stock items", stock_items_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">

  <table class=" dtable table table-striped table-bordered table-hover table-sm table-light shadow-sm">
    <thead>
      <tr>
     	  
        <th>Name</th>
        
        <th>Location</th>
        
        <th>Reference</th>
        
        <th>Company</th>
        
        <th>Qty</th>
        
        <th>Image</th>
        
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @stocks.each do |stock_item| %>
        <%= content_tag :tr, id: dom_id(stock_item), class: dom_class(stock_item) do %>
           
            <td><%= stock_item.name %></td>
          
            <td><%= stock_item.location.name %></td>
          
            <td><%= stock_item.reference %></td>
          
            <td><%= stock_item.company.name %></td>
          
            <td><%= stock_item.qty %> <% if stock_item.qty_type %><%= stock_item.qty_type.name %><% end %></td>
          
            <td><%= image_tag(stock_item.image, class:"rounded", style: "width:150px") %></td>
          
          <td>
              <%= link_to "Detail",stock_item, class: 'btn btn-sm btn-primary'   %>

              <%= link_to "Edit" ,edit_stock_item_path(stock_item), class: 'btn btn-sm btn-info'   %>

              <%= button_to "Delete", stock_item_path(stock_item), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>

                </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>



