
<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Stock outs</h3>
    <div class="card-tools">
      <%= link_to "New Stock out", new_stock_out_path, class: 'btn btn-sm btn-primary' %>



    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table id="stock_outs_list" class="table table-striped table-bordered table-hover table-sm table-ligh shadow-sm">
      <thead>
        <tr>
          
          <th>Stock item</th>
          
          <th>Qty</th>
          
          <th>Cost</th>
          
          <th>Total</th>

          <th>Created At</th>

          <th>Updated At</th>
          
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% @stock_outs.each do |stock_out| %>
          <%= content_tag :tr, id: dom_id(stock_out), class: dom_class(stock_out) do %>
            
              <td><%= stock_out.stock_item.name %></td>
            
              <td><%= stock_out.qty %> <%= stock_out.qty_type.name %> </td>
            
              <td><%= stock_out.cost %></td>
            
              <td><%= stock_out.total %></td>

              <td><%= stock_out.created_at.day %> - <%= stock_out.created_at.month %> - <%= stock_out.created_at.year %></td>

              <td><%= stock_out.updated_at.day %> - <%= stock_out.updated_at.month %> - <%= stock_out.updated_at.year %></td>
            
            <td>
                <%= link_to "Detail",stock_out, class: 'btn btn-sm btn-primary'   %>

                <%= link_to "Edit" ,edit_stock_out_path(stock_out), class: 'btn btn-sm btn-info'   %>

                <%# <%= button_to "Delete", stock_out_path(stock_out), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>

                  </td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#stock_outs_list').DataTable( {
       dom:
       '<"row justify-content-between mb-2"' +
       '<"col-sm-auto col-12"B>' +
       '<"col-sm-auto col-12"f>' +
       ">" +
       '<"table-responsive"t>' +
       '<"d-flex justify-content-between align-items-center"ip>',
        buttons: [
            {
                extend: 'excelHtml5',
                exportOptions: {
                    columns: ':visible'
                }
            },
            'colvis'
        ]
        } );
    } );
</script>