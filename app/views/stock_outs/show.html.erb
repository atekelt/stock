<div class="card shadow">
  <div class="card-header">
    <h4>
      Stock out
    </h4>
  </div>
  <div class="card-body">
  
    <b>Stock item:</b>
    <%= @stock_out.stock_item %>
    <br>
  
    <b>Qty:</b>
    <%= @stock_out.qty %>
    <br>
  
    <b>Qty type:</b>
    <%= @stock_out.qty_type %>
    <br>
  
    <b>Cost:</b>
    <%= @stock_out.cost %>
    <br>
  
    <b>Total:</b>
    <%= @stock_out.total %>
    <br>
  
  </div>
  <div class="card-footer">
    <%= link_to "Edit" ,edit_stock_out_path(@stock_out), class: 'btn btn-sm btn-info'   %>
    <%= button_to "Delete", stock_out_path(@stock_out), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>


       </div>
</div>
