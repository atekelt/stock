<div class="card shadow">
  <div class="card-header">
    <h4>
      Stock in
    </h4>
  </div>
  <div class="card-body">
  
    <b>Stock item:</b>
    <%= @stock_in.stock_item %>
    <br>
  
    <b>Qty:</b>
    <%= @stock_in.qty %>
    <br>
  
    <b>Qty type:</b>
    <%= @stock_in.qty_type %>
    <br>
  
    <b>Cost:</b>
    <%= @stock_in.cost %>
    <br>
  
    <b>Total:</b>
    <%= @stock_in.total %>
    <br>
  
  </div>
  <div class="card-footer">
    <%= link_to "Edit" ,edit_stock_in_path(@stock_in), class: 'btn btn-sm btn-info'   %>
    <%= button_to "Delete", stock_in_path(@stock_in), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>


       </div>
</div>
