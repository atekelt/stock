
<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Stock ins</h3>
    <div class="card-tools">
      <%= link_to "New Stock in", new_stock_in_path, class: 'btn btn-sm btn-primary' %>



    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">

  <table id="stock_ins_list" class="table table-striped table-bordered table-hover table-sm table-ligh shadow-sm">
    <thead>
      <tr>
     	  
        <th>Stock item</th>
        
        <th>Qty</th>
        
        <th>Cost</th>
        
        <th>Total</th>

        <th>Created At</th>

        <th>Updated At</th>
        
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @stock_ins.each do |stock_in| %>
        <%= content_tag :tr, id: dom_id(stock_in), class: dom_class(stock_in) do %>
           
            <td><%= stock_in.stock_item.name %></td>
          
            <td><%= stock_in.qty %> <%= stock_in.qty_type.name %></td>
          
            <td><%= stock_in.cost %></td>
          
            <td><%= stock_in.total %></td>

            <td><%= stock_in.created_at.day %> - <%= stock_in.created_at.month %> - <%= stock_in.created_at.year %></td>

            <td><%= stock_in.updated_at.day %> - <%= stock_in.updated_at.month %> - <%= stock_in.updated_at.year %></td>
          
          <td>
              <%= link_to "Detail",stock_in, class: 'btn btn-sm btn-primary'   %>

              <%= link_to "Edit" ,edit_stock_in_path(stock_in), class: 'btn btn-sm btn-info'   %>

              <%# <%= button_to "Delete", stock_in_path(stock_in), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>

                </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>

<script>
  $(document).ready(function() {
    $('#stock_ins_list').DataTable( {
       dom:
       '<"row justify-content-between mb-2 align-items-center"' +
       '<"col-md-auto col-12"B>' +
       '<"col-md-auto col-12 text-center"l>' +
       '<"col-md-auto col-12"f>' +
       ">" +
       '<"table-responsive"t>' +
       '<"d-flex justify-content-between align-items-center"ip>',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5'
            ]
        } );
    } );
</script>