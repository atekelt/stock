<div class="card shadow">
  <div class="card-header">
    <h4>
      Tenant
    </h4>
  </div>
  <div class="card-body">
  
    <b>Name:</b>
    <%= @tenant.name %>
    <br>
  
    <b>Domain:</b>
    <%= @tenant.domain %>
    <br>
  
    <b>Subdomain:</b>
    <%= @tenant.subdomain %>
    <br>
  
  </div>
  <div class="card-footer">
    <%= link_to "Edit" ,edit_tenant_path(@tenant), class: 'btn btn-sm btn-info'   %>
    <%= button_to "Delete", tenant_path(@tenant), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>


       </div>
</div>
