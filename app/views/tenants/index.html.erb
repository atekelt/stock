
<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Tenants</h3>
    <div class="card-tools">
      <%= link_to "New Tenant", new_tenant_path, class: 'btn btn-sm btn-primary' %>



    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">

  <table class=" dtable table table-striped table-bordered table-hover table-sm table-ligh shadow-sm">
    <thead>
      <tr>
     	  
        <th>Name</th>
        
        <th>Domain</th>
        
        <th>Subdomain</th>
        
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @tenants.each do |tenant| %>
        <%= content_tag :tr, id: dom_id(tenant), class: dom_class(tenant) do %>
           
            <td><%= tenant.name %></td>
          
            <td><%= tenant.domain %></td>
          
            <td><%= tenant.subdomain %></td>
          
          <td>
              <%= link_to "Detail",tenant, class: 'btn btn-sm btn-primary'   %>

              <%= link_to "Edit" ,edit_tenant_path(tenant), class: 'btn btn-sm btn-info'   %>

              <%= button_to "Delete", tenant_path(tenant), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>

                </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>

