
<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Users</h3>
    <div class="card-tools">
      <%= link_to "New User", new_user_path, class: 'btn btn-sm btn-primary' %>



    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">

  <table class=" dtable table table-striped table-bordered table-hover table-sm table-ligh shadow-sm">
    <thead>
      <tr>
     	  
        <th>E-mail</th>
        
        <th>User Name</th>

        <th>Role</th>
        
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% if user.role != "Admin" %>
          <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
            
              <td><%= user.email %></td>
            
              <td><%= user.user_name %></td>

              <td><%= user.role %></td>
            
            <td>
                <%# <%= link_to "Detail",user, class: 'btn btn-sm btn-primary'   %>

                <%= link_to "Edit" ,edit_user_path(user), class: 'btn btn-sm btn-info'   %>

                <%= button_to "Delete", user_path(user), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'btn btn-sm btn-danger'  %>

                  </td>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>

